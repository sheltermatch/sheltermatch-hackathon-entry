<article>
  <div class="cards">
    <div class="card">
      <div class="card-copy">
        <%= form_for @shelter do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :description %>
          <%= f.text_field :description %>

          <%= f.label :beds %>
          <%= f.number_field :beds %>

          <%= f.label :fee %>
          <%= f.check_box :fee %><br>

          <%= f.label :age_min %>
          <%= f.number_field :age_min %>

          <%= f.label :age_max %>
          <%= f.number_field :age_max %>

          <ul>
          <%= f.fields_for :gender_id do |gender| %>
            <%= gender.label :male %>
            <%= gender.check_box :male %>
            <%= gender.label :female %>
            <%= gender.check_box :female %>
            <%= gender.label :other %>
            <%= gender.check_box :other %>
          <% end %>
          </ul>

          <ul>
          <%= f.fields_for :meal_id do |meal| %>
            <%= meal.label :breakfast %>
            <%= meal.check_box :breakfast %>
            <%= meal.label :lunch %>
            <%= meal.check_box :lunch %>
            <%= meal.label :dinner %>
            <%= meal.check_box :dinner %>
          <% end %>
          </ul>

          <%= f.label :phone %>
          <%= f.telephone_field :phone %>

          <%= f.label :address %>
          <%= f.text_field :address %>

          <%= f.submit "Create Shelter" %>
        <% end %>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
<article>
